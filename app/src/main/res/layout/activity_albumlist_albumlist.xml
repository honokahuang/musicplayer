<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/music5"
            android:id="@+id/albumimage" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="4">

            <TextView
                android:text="albumtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/albumtitle"
                android:layout_toEndOf="@+id/albumimage"
                android:textSize="18sp"
                android:layout_marginTop="5.0dip"
                android:focusable="true"
                android:maxEms="13"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginLeft="5dp"
                android:layout_weight="1" />

            <TextView
                android:text="album_aritist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/album_aritist"
                android:layout_marginTop="5.0dip"
                android:layout_marginLeft="10dp"
                android:layout_below="@+id/albumtitle"
                android:layout_toEndOf="@+id/albumimage"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:text="number_of_song"
                android:layout_marginTop="10dip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/number_of_song"
                android:layout_weight="1" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>