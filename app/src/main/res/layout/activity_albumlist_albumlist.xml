<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:background="#ffffff">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:foreground="?attr/selectableItemBackground">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="number_of_song"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/number_of_song"
                android:layout_alignTop="@+id/albumtitle"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp" />

            <TextView
                android:text="albumtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/albumtitle"
                android:textSize="18sp"
                android:focusable="true"
                android:maxEms="10"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginTop="10dp"
                android:layout_marginStart="70dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/music5"
                android:id="@+id/albumimage"
                android:layout_alignTop="@+id/albumtitle"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"
                />

            <TextView
                android:text="album_aritist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/album_aritist"
                android:layout_alignBottom="@+id/albumimage"
                android:layout_alignStart="@+id/albumtitle" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>